{
    "manifest_version": 3,
    "name": "searchIng",
    "description": "Simple search bar to navigate through Siding and other IngUc pages...",
    "version": "1.0",
    "action": {
        "default_title": "Press Ctrl+/ to prompt the search bar UI",
        "default_icon": "icon.png",
        "default_popup": "./src/popup.html"
    },
    "commands": {
        "prompt_search_bar": {
            "suggested_key": {
                "default": "Ctrl+Shift+S",
                "mac": "Command+Shift+S"
            },
            "description": "Prompt search bar to navigate through the page's links"
        }
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "content_scripts": [
       {
        "matches": [ "https://intrawww.ing.puc.cl/*" ],
         "js": ["./src/scripts/handler.js"]
       }
     ],
    "permissions": [
        "tabs",
        "activeTab"
    ],
    "web_accessible_resources": [
        {
            "resources": [ "data.json"],
            "matches": [ "https://intrawww.ing.puc.cl/*" ]
        }
    ]
}
